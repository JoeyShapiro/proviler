{
  "name": "proviler",
  "displayName": "proviler",
  "description": "Add a debug profiler graph like in Visual Studio",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "files": [
    "out/**",
    "resources/**"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "proviler.helloWorld",
        "title": "Hello World"
      }
    ],
    "views": {
      "debug": [
        {
          "type": "webview",
          "id": "proviler",
          "name": "Profiler",
          "icon": "resources/profiler.svg"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "proviler",
      "properties": {
        "proviler.interval": {
          "type": "number",
          "default": 1024,
          "description": "Size of the buffer (KiB) to use when reading files"
        },
        "proviler.logSize": {
          "type": "number",
          "default": 500,
          "description": "Debounce time in milliseconds"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "postinstall": "electron-rebuild -f -w node-pty --version=39.2.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.105.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "electron-rebuild": "^3.2.9",
    "eslint": "^9.36.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "node-pty": "^1.0.0"
  }
}
